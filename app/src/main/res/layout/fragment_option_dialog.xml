<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_small">
    <TextView
        style="@style/text.extrabold.3"
        android:text="@string/dietary_restriction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rbVegetarianGroup"
        android:layout_marginBottom="@dimen/spacing_unit_small"/>

    <RadioGroup
        android:id="@+id/rbVegetarianGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbVegetarianTrue"
            style="@style/text.extrabold.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarian" />

        <RadioButton
            android:id="@+id/rbVegetarianFalse"
            style="@style/text.extrabold.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbVegetarianGroup"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/proximanova_xbold"
        android:text="Save"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/spacing_unit_large"/>

</RelativeLayout>