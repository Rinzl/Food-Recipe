<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/light_gray"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inner"
        android:background="@drawable/instructions_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/spacing_unit_medium"
        android:foreground="?selectableItemBackground"
        android:layout_marginStart="@dimen/spacing_unit_large"
        android:layout_marginEnd="@dimen/spacing_unit_large">

        <TextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/pink"
            android:id="@+id/instruction_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_unit_medium"
            android:layout_marginBottom="@dimen/spacing_unit_large"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginStart="@dimen/spacing_unit_large"
            app:fontFamily="@font/proximanova_xbold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/default_text_color_black"
            android:id="@+id/instruction_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_unit_medium"
            android:layout_marginBottom="@dimen/spacing_unit_medium"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginStart="32.0dip"
            android:layout_marginEnd="@dimen/spacing_unit_large"
            app:fontFamily="@font/proximanova_reg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/instruction_number"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>