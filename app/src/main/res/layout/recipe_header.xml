<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_unit_medium"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/pink"
        android:id="@+id/ratingTextView"
        android:paddingBottom="@dimen/spacing_unit_xs"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/spacing_unit_large"
        android:layout_marginEnd="@dimen/spacing_unit_large"
        app:layout_constraintBottom_toTopOf="@id/titleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/text.extrabold.4" />

    <TextView
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/default_text_color_black"
        android:id="@+id/titleTextView"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_unit_large"
        android:layout_marginEnd="@dimen/spacing_unit_large"
        app:fontFamily="@font/proximanova_xbold"
        app:layout_constraintBottom_toTopOf="@id/compilationLinkTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingTextView" />

    <TextView
        android:textSize="@dimen/text_size_16"
        android:gravity="start|center"
        android:id="@+id/compilationLinkTextView"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:lineSpacingMultiplier="1.15"
        android:layout_marginStart="@dimen/spacing_unit_large"
        android:layout_marginEnd="@dimen/spacing_unit_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />
</android.support.constraint.ConstraintLayout>