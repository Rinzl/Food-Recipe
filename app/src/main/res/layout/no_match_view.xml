<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/noMatchLayout"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white_100"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/my_recipes_header_image_size"
        android:layout_height="@dimen/my_recipes_header_image_size"
        android:layout_marginBottom="12.0dip"
        app:srcCompat="@drawable/search_no_results" />

    <TextView
        android:textColor="@color/pink"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:text="@string/no_search_match"
        android:lineSpacingMultiplier="0.9"
        style="@style/text.extrabold.3" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="#ff18c1ee"
        android:layout_gravity="center_horizontal"
        android:id="@+id/clearSearchButton"
        android:background="@color/white_100"
        android:paddingTop="24.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_search"
        android:lineSpacingExtra="3.0sp"
        android:fontFamily="@font/proximanova_xbold" />
</LinearLayout>