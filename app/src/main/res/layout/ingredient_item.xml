<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.0dip"
    android:layout_marginBottom="10.0dip"
    android:layout_marginStart="@dimen/spacing_unit_large"
    android:layout_marginEnd="@dimen/spacing_unit_large"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/default_text_color_black"
        android:id="@+id/ingredient_name"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginEnd="@dimen/spacing_unit_large"
        app:fontFamily="@font/proximanova_reg"
        app:layout_constraintEnd_toStartOf="@id/ingredient_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/default_text_color_black"
        android:id="@+id/ingredient_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"
        app:fontFamily="@font/proximanova_sbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>